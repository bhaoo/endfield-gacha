{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "endfield-gacha",
  "version": "0.1.0",
  "identifier": "com.bhao.endfieldgacha",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run generate"
  },
  "app": {
    "windows": [
      {
        "title": "Endfield Gacha",
        "width": 1200,
        "height": 690,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
